<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".streamOfPraise18.menu18">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回"
                android:id="@+id/btnMenu18Previous"
                android:textSize="18sp"
                android:background="#AAAAAA" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.從心合一"
                android:id="@+id/song1801從心合一"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.深刻的愛"
                android:id="@+id/song1802深刻的愛"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.回家"
                android:id="@+id/song1803回家"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.永遠不分離"
                android:id="@+id/song1804永遠不分離"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.是祢的愛"
                android:id="@+id/song1805是祢的愛"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.新的一天"
                android:id="@+id/song1806新的一天"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.齊來讚美"
                android:id="@+id/song1807齊來讚美"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.我有喜樂"
                android:id="@+id/song1808我有喜樂"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.聖靈的江河"
                android:id="@+id/song1809聖靈的江河"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.帶我進入祢的同在"
                android:id="@+id/song1810帶我進入祢的同在"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11.願祢降臨"
                android:id="@+id/song1811願祢降臨"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.禱告的大軍"
                android:id="@+id/song1812禱告的大軍"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13.耶和華作了我的高臺"
                android:id="@+id/song1813耶和華作了我的高臺"
                android:background="#DDDDDD"
                android:textSize="18sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14.天上的家"
                android:id="@+id/song1814天上的家"
                android:background="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
