<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.casper.test.kid03.menuKid03">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView24" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回"
                android:id="@+id/btnMenuKid03Previous"
                android:textSize="18sp"
                android:background="#AAAAAA" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.如果你想知道"
                android:id="@+id/kid0301如果你想知道"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.我們是光明之子"
                android:id="@+id/kid0302我們是光明之子"
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.有一位神"
                android:id="@+id/kid0303有一位神"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.求主充滿我"
                android:id="@+id/kid0304求主充滿我"
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.親愛的 要記得"
                android:id="@+id/kid0305親愛的要記得"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.爸爸媽媽的愛"
                android:id="@+id/kid0306爸爸媽媽的愛"
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.祢的慈愛"
                android:id="@+id/kid0307祢的慈愛"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.喔 十字架"
                android:id="@+id/kid0308喔十字架"
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.進入豐盛"
                android:id="@+id/kid0309進入豐盛"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.祢的同在"
                android:id="@+id/kid0310祢的同在"
                android:textSize="18sp"
                android:background="#FFFFFF"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11.彈琴歌唱讚美祢"
                android:id="@+id/kid0311彈琴歌唱讚美祢"
                android:textSize="18sp"
                android:background="#DDDDDD"
                android:gravity="center_vertical" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
